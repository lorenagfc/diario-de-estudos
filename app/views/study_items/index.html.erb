
<div class = "container">
    <div class = "container2">
        <h1>Di√°rio de Estudos</h1>

        <h4><%= link_to 'Novo item de estudo', new_study_item_path %></h4>

        <% @study_items.each do |study_item| %>

            <div class = "list">
                <h3><b><%= study_item.title %></b></h3>
                <p><%= study_item.category %></p>
                <p><%= study_item.description %></p>
                <p><%= study_item.status %></p>
                <p><%= link_to 'Editar', edit_study_item_path(study_item) %></p>
                <p><%= link_to 'Deletar', study_item_path(study_item), method: :delete, data: {confirm: 'Deseja mesmo apagar item?'} %></p>
            </div>
                
        <% end %>
    </div>
</div>