<h1>Editar item de estudo</h1>

<%= form_with model: @study_item, locals: true do |f| %>
    <div>
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :category, 'Categoria' %>
      <%= f.text_field :category %>
    </div>

    <div>
      <%= f.label :description, 'Descrição' %>
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.submit 'Editar' %>
    </div>
  <% end %>